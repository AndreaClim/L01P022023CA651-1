@{
    // Si hay algún código adicional o configuraciones previas, se pueden agregar aquí.
}
<h1>Mantenimiento de Equipos</h1>
<br />
<form asp-action="CrearEquipos">
    <div class="form-group row mb-4">
        <div class="col-sm-2">
            <label>Nombre</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("Nombre", "", new { @class = "form-control" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblDescripcion", "Descripción")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("descripcion", "", new { @class = "form-control", @placeHolder = "Ingrese la descripcion" })
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblTipo", "Tipo de Equipo")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("tipo", "", new { @class = "form-control", @placeHolder = "Ingrese el tipo de equipo" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblModelo", "Modelo")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("modelo", "", new { @class = "form-control", @placeHolder = "Ingrese el modelo" })
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblCosto", "Costo")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("costo", "", new { @class = "form-control", @placeHolder = "Ingrese el costo del equipo", type = "number" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblAñoCompra", "Año de Compra")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("añoCompra", "", new { @class = "form-control", @placeHolder = "Ingrese el año de compra", type = "number", min = "1900", max = "2100" })
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblVidaUtil", "Vida Útil (años)")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("vidaUtil", "", new { @class = "form-control", @placeHolder = "Ingrese la vida útil del equipo", type = "number" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblMarca", "Marca")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("marca", ViewData["listadoDeMarcas"] as SelectList, "Seleccione una Marca", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblEstado", "Estado de Equipo")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("estado", new SelectList(new[] { "Nuevo", "Usado", "En reparación", "Obsoleto" }), "Seleccione un estado", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Equipo</th>
                <th>Descripción</th>
                <th>Marca</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoDeEquipos"]) 
            {
                <tr>
					<td>@equipo.nombre</td>
					<td>@equipo.descripcion</td>
					<td>@equipo.nombre_marca</td>
                </tr>
            }
        </tbody>
    </table>
</form>
